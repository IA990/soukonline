# Configuration GitHub
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO=IA990/soukonline

# Configuration du stockage
STORAGE_PATH=/storage
MAX_UPLOAD_SIZE=10485760  # 10MB en bytes
ALLOWED_DOMAINS=soukonline.ma,www.soukonline.ma

# Configuration de la base de données
DB_HOST=localhost
DB_PORT=5432
DB_NAME=soukonline
DB_USER=soukonline_user
DB_PASSWORD=your_password_here

# Configuration de sécurité
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=86400  # 24 heures en secondes
CORS_ORIGINS=http://localhost:3000,https://soukonline.ma

# Configuration des services externes
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_smtp_password_here

# Configuration du cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Configuration des limites de requêtes
RATE_LIMIT_WINDOW=3600  # 1 heure en secondes
RATE_LIMIT_MAX_REQUESTS=1000

# Configuration des médias
IMAGE_QUALITY=85
MAX_IMAGE_DIMENSION=1920
GENERATE_THUMBNAILS=true
THUMBNAIL_SIZES=300,600,1200

# Configuration des notifications
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true
NOTIFICATION_SENDER=notifications@soukonline.ma

# Configuration du nettoyage automatique
CLEANUP_INTERVAL=86400  # 24 heures en secondes
MAX_FILE_AGE=2592000  # 30 jours en secondes
TEMP_FILE_TTL=86400  # 24 heures en secondes

# Configuration des logs
LOG_LEVEL=INFO
LOG_FILE=/var/log/soukonline/app.log
ENABLE_ERROR_REPORTING=true

# Configuration du monitoring
ENABLE_PERFORMANCE_MONITORING=true
MONITORING_INTERVAL=300  # 5 minutes en secondes
